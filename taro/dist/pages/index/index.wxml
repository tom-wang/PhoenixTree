<import src="../../components/avatar/index.wxml" />
<block>
    <view wx:if="{{isLoading}}"></view>
    <view wx:elif="{{isNotAuth}}">
        <view>
            <button open-type="getUserInfo" size="mini" bindgetuserinfo="onGetUserInfo"
            data-event-onGetUserInfo-scope="this" data-component-path="{{$path}}">进入新世界</button>
        </view>
    </view>
    <view wx:else>
        <view>
            <template is="Avatar" data="{{...$$Avatar}}"></template>
            <button size="mini" bindtap="onClick" data-event-onClick-scope="this"
            data-component-path="{{$path}}">打开新页面</button>
        </view>
    </view>
</block>