<import src="../../components/avatar/index.wxml" />
<block>
    <block wx:if="{{isLoading}}">
        <view></view>
    </block>
    <block wx:elif="{{isNotAuth}}">
        <view>
            <view>
                <button open-type="getUserInfo" size="mini" on-get-user-info="{{onGetUserInfo.bind(this)}}">进入新世界</button>
            </view>
        </view>
    </block>
    <view wx:else>
        <view>
            <template is="Avatar" data="{{...item}}" wx:for-item="item" wx:for="{{$$Avatar}}"
            wx:key="{{69953303}}"></template>
            <button size="mini" bindtap="onClick" data-event-onClick-scope="this"
            data-component-path="{{$path}}">打开新页面</button>
        </view>
    </view>
</block>